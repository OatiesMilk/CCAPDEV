<div class="setting-backdrop">
    <div class="setting-container">
        <div class="header">
            <img src="/common/images/logo-icon-white.png" alt="Logo"> 
            <h2>Update Profile Details</h2>
        </div>
        <form action="/gotoProfile" method="post">
                    <div class="back-button">
                        <label for="submit-login">
                            <img src="/common/images/left_arrow.png" alt="Sign in" style="cursor: pointer;">
                        </label>
                        <input type="submit" id="submit-login" style="display: none;">
                    </div>
            </form>
        <form action="/updateAccount" method="post">
            <div class="setting-form">
            <!-- Right Column Inputs -->
            <div class="form-column">
                <div class="form-control">
                    <label for="email">NEW E-MAIL</label>
                    <input type="email" id="email" name="email"  value="{{email}}">
                </div>
                
                <div class="form-control">
                    <label for="username">NEW USERNAME</label>
                    <input type="text" id="username" name="username" value="{{username}}">
                </div>
                
                <div class="form-control">
                    <label for="password">NEW PASSWORD</label>
                    <input type="password" id="password" name="password">
                </div>

                <div class="form-control">
                    <label for="old-password">OLD PASSWORD</label>
                    <input type="password" id="old_password" name="old_password">
                </div>
            </div>

            <!-- Left Column Inputs -->
            <div class="form-column">
                <div class="form-control">
                    <label for="firstname">NEW FIRST NAME</label>
                    <input type="text" id="firstname" name="firstname" value="{{fname}}">
                </div>
                
                <div class="form-control">
                    <label for="lastname">NEW LAST NAME</label>
                    <input type="text" id="lastname" name="lastname" value="{{lname}}">
                </div>
                
                <div class="form-control">
                    <label for="confirm-password">CONFIRM NEW PASSWORD</label>
                    <input type="password" id="confirm_password" name="confirm_password">
                </div>

                <div class="form-control">
                    <label for="bio">NEW BIO</label>
                    <textarea id="bio" name="bio">{{bio}}</textarea>
                </div>
            </div>
            </div>
            
            
            <div class="error">
                {{#if errorMessage}}
                <p style="color: red;">{{errorMessage}}</p>
                {{/if}}
            </div>
            
            <button type="submit" class="setting-btn">UPDATE</button>
        </form>
    </div>
</div>