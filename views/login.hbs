<div class="login-backdrop">
    <div class="login-container">
        <div class="login-header">
            <img src="/common/images/logo-icon-white.png" alt="Logo" class="logo">
            <h2>User Log-in</h2>
        </div>

        <form action="/verifyLogin" method="post">
            <div class="form-group">
                <label for="username" class="label">USERNAME</label>
                <input type="text" id="username" name="username" class="input-text">
            </div>

            <div class="form-group">
                <label for="password" class="label">PASSWORD</label>
                <input type="password" id="password" name="password" class="input-password" required>
            </div>

            <div class="form-checker-text">
                <label><input type="checkbox" name="remember"> Remember me</label>
            </div>

            <div class="error">
            {{#if error}}
                {{error}}
            {{/if}}
            </div>

            <div class="form-group">
                <input type="submit" value="LOG IN" class="input-submit">
            </div>
        </form>

        <div class="login-footer">
            <p>Don't have an account yet?</p> <!-- Remove form from inside the p tag -->
            <form action="/gotoAccountRegistration" method="post" style="margin-left: 10px;">
                <input type="submit" value="Register"></input>
            </form>
        </div>
    </div>
</div>